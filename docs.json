{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Castari",
  "theme": "linden",
  "colors": {
    "primary": "#394656",
    "light": "#606C7C",
    "dark": "#222121"
  },
  "font": {
    "headings": {
      "family": "Instrument Serif",
      "url": "https://fonts.googleapis.com/css2?family=Instrument+Serif&display=swap"
    },
    "body": {
      "family": "Inter",
      "url": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    }
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://app.castari.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "/quickstart"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "installation", "first-agent"]
          },
          {
            "group": "CLI Reference",
            "pages": [
              "cli/overview",
              "cli/login",
              "cli/init",
              "cli/deploy",
              "cli/invoke",
              "cli/agents",
              "cli/secrets",
              "cli/logs"
            ]
          },
          {
            "group": "SDK Reference",
            "pages": [
              "sdk/overview",
              "sdk/client",
              "sdk/agents",
              "sdk/secrets",
              "sdk/types"
            ]
          },
          {
            "group": "Concepts",
            "pages": [
              "concepts/how-it-works",
              "concepts/agents",
              "concepts/sandboxes",
              "concepts/secrets",
              "concepts/invocations"
            ]
          },
          {
            "group": "Guides",
            "pages": [
              "guides/templates",
              "guides/custom-agents",
              "guides/mcp",
              "guides/debugging",
              "guides/best-practices"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": ["api-reference/introduction"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "GitHub",
          "href": "https://github.com/castari/cli",
          "icon": "github"
        }
      ]
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/castari/cli",
      "x": "https://x.com/castari_dev",
      "linkedin": "https://linkedin.com/company/castari"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true
  }
}
